<script type="text/javascript" charset="utf-8">
$(function(){
	new Highcharts.Chart({
		chart:{
			renderTo: "factura2"
		},
		title:{
			text:"Destinos ordenados por solicitudes"
		},
	
		xAxis:{
			title:{
				text:"solicitudes"
			}
		},
		yAxis:{
			title:{
				text:"tiempo mes"
			}
		},
		series:[{
			data:[2,4,5,8]
		}]
	});
});
</script>
<div id="factura2" style="width:560px; height:300px;"></div>

<table id ="reporte_solicitudes">
	<thead>
		<tr>
			<th>Id_solicitudes</th>
			<th>Estado</th>
			<th>fecha_Vencimiento</th>
			<th>Fecha_aprobado</th>
			<th>Monto</th>
		</tr>
	</thead>
	<tbody>
		<% @solicitudes.each do |solicitudes| %>
			<tr>
				<td><%= solicitudes.id_solicitudes %></td>
				<td><%= solicitudes.estado %></td>
				<td><%= solicitudes.fecha_vencimiento %></td>
				<td><%=solicitudes.fecha_aprobado%></td>
				<td><%=solicitudes.monto%></td>
			</tr>
		<% end %>
	</tbody> 
</table>

