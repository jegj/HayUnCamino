<script type="text/javascript" charset="utf-8">
$(function(){
	new Highcharts.Chart({
		chart:{
			renderTo: "factura2"
		},
		title:{
			text:"Destinos ordenados por solicitudes"
		},
	
		xAxis:{
			title:{
				text:"Id_Factura"
			}
		},
		yAxis:{
			title:{
				text:"Vigente o Por Cobrar"
			}
		},
		series:[{
			data:[2,4,5,8]
		}]
	});
});
</script>
<div id="factura2" style="width:560px; height:300px;"></div>


