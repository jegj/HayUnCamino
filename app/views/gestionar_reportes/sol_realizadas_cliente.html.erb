<script type="text/javascript" charset="utf-8">
$(function(){
	new Highcharts.Chart({
		chart:{
			renderTo: "factura2"
		},
		title:{
			text:"Destinos ordenados por solicitudes"
		},
	
		xAxis:{
			title:{
				text:"Clientes"
			}
		},
		yAxis:{
			title:{
				text:"Numero de Solicitudes"
			}
		},
		series:[{
			data:[2,4,5,8]
		}]
	});
});
</script>
<div id="factura2" style="width:560px; height:300px;"></div>
<table id ="reporte_sol_realizadas_cliente">
	<thead>
		<tr>
			<th>Id_Usuario</th>
			<th>Nombre_Usuario</th>
			<th>Cantidad de Solicitudes</th>
		</tr>
	</thead>
	<tbody>
		<% b=@aux.to_a %>
		<% c=b.size-1%>
		<%for i in 0..c %>
   		<%@query=Usuario.find(b[i][0]).nombre%>
   			<tr>
   				<td><%=b[i][0]%></td>
					<td><%=@query%></td>
					<td><%=b[i][1]%></td>
			</tr>
		<%end%>
	</tbody> 
</table>
