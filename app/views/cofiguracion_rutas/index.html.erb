<h1><%= @titulo %> </h1>

<p></p>
<p></p>

<table id ="rutas">
	<thead>
		<tr>
			<th>Destino</th>
			<th>Capital</th>
			<th>Costo</th>
			<th>Duracion.Prom(Hrs)</th>
			<th>Modificar</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<% @rutas.each do |ruta| %>
			<tr>
				<td><%= ruta.destino %></td>
				<td><%= ruta.capital %></td>
				<td><%= ruta.costo %></td>
				<td><%= ruta.tiempo_prom_duracion %></td>
				<td><%=link_to "Modificar" ,{:action=>"modificar_ruta",:ruta_id=>ruta.id_ruta},:class=>"link_negro"%></td>

				<td><%=link_to "Eliminar" ,{:action=>"eliminar_ruta",:ruta_id=>ruta.id_ruta},:class=>"link_negro",:confirm=>"Esta usted seguro?"%></td>
			</tr>
		<% end %>
	</tbody>
</table>

<p></p>
<p></p>
<p></p>
<p></p>
<p></p>
<p></p>
