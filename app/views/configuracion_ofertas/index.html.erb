<h1><%= @titulo %> </h1>

<p></p>
<p></p>

<table id ="ofertas">
	<thead>
		<tr>
			<th>Nombre Oferta</th>
			<th>Descuento</th>
			<th>Fecha de Inicio</th>
			<th>Fecha de Fin</th>
			<th>Modificar</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<% @ofertas.each do |oferta| %>
			<tr>
				<td><%= oferta.nombre_Ofertar %></td>
				<td><%= oferta.descuento %>%</td>
				<td><%= oferta.fecha_Inicio %></td>
				<td><%= oferta.fecha_Fin   %></td>
				<td><%=link_to "Modificar" ,{:action=>"modificar_oferta",:oferta_id=>oferta.id_Ofertas},:class=>"link_negro"%></td>

				<td><%=link_to "Eliminar" ,{:action=>"eliminar_oferta",:oferta_id=>oferta.id_Ofertas},:class=>"link_negro",:confirm=>"Esta usted seguro?"%></td>
			</tr>
		<% end %>
	</tbody>
</table>

