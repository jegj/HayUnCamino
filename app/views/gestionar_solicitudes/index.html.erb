<table id ="solicitudes">
	<thead>
		<tr>
			<th>Id-Solicitud</th>
			<th>Estado</th>
			<th>Ubicación Actual</th>
			<th>Ubicación Final</th>
			<th>Actualizar Información</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<% @solicitudes.each do |solicitud| %>
			<tr>
				<td><%= solicitud.id_solicitudes %></td>
				<td><%= solicitud.estado %></td>
				<td><%= solicitud.obtener_destino_actual %></td>
				<td><%= solicitud.obtener_destino %></td>
				<td><%=link_to "Actualizar" ,{:action=>"actualizar",:solicitud_id=>solicitud.id_solicitudes},:class=>"link_negro"%></td>

				<td><%=link_to "Eliminar" ,{:action=>"eliminar_solicitud",:solicitud_id=>solicitud.id_solicitudes},:class=>"link_negro",:confirm=>"Esta usted seguro?"%></td>
			</tr>
		<% end %>
	</tbody>
</table>

