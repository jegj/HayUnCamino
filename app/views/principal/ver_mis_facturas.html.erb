<h1><%= @titulo%></h1>
<p></p>
<p><b>Información detallada de sus Facturas</b></p>

<table id="reporte_factura_usuario">
	<thead>
		<th>Id</th>
		<th>Fecha Tope</th>
		<th>Estado</th>
		<th>Fecha Cancelacion</th>
		<th>Monto</th>
	</thead>
	<% cont_por_pagar=0
					 cont_pagado=0
	%>
	<tbody>
		<% @facturas.each do |id_factura|%>
			<% factura=Factura.buscar_factura(id_factura)%>
			<% if factura.estado.eql?("Por Pagar")
				cont_por_pagar+=1
				else
					cont_pagado+=1
				end
			%>
			<tr>
				<td><%=factura.id%></td>
				<td><%=factura.fecha_Tope%></td>
				<td><%=factura.estado%></td>
				<td>
					<% if factura.fecha_cancelacion!=nil %>
						<%=factura.fecha_cancelacion%>
					<% else %>
						<font class="alerta_reporte">
							Falta Cancelar 
						</font>
					<%end %>
				</td>
				<td><%=factura.monto%></td>
			</tr>
			<script type="text/javascript" charset="utf-8">
$(document).ready(function() {
      chart1 = new Highcharts.Chart({
         chart: {
            renderTo: 'grafico_usuario_factura',
            type: 'bar'
         },
         title: {
            text: 'Facturas'
         },
         xAxis: {
            categories: ['Pagadas','Por Pagar']
         },
         yAxis: {
            title: {
               text: 'Cantidad'
            }
         },
         series: [{
            name: '<%= session[:usuario_sesion].nombre %>',
            data: [<%="#{cont_pagado},#{cont_por_pagar}"%>]
         }]
      });
   });
</script>
		<%end%>
	</tbody>
</table>
<p></p>
<p></p>
<p></p>
<p></p>
<p></p>
<p></p>
<p><b>Información Grafica:</b></p>
<div id="grafico_usuario_factura" class="grafico">
</div>


